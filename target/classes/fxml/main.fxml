<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="419.0" prefWidth="487.0"
      styleClass="app-container"
      stylesheets="@/styles/main.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.timeapp.Controller">

    <!-- Поля ввода -->
    <Label fx:id="comeToWork"
           layoutX="75.0" layoutY="76.0"
           text="Пришла на работу:"
           styleClass="input-label"/>

    <TextField fx:id="timeComeToWork"
               layoutX="213.0" layoutY="72.0"
               styleClass="time-input"/>

    <Label fx:id="goToLunch"
           layoutX="75.0" layoutY="152.0"
           text="Ушла на обед:"
           styleClass="input-label"/>

    <TextField fx:id="timeGoToLunch"
               layoutX="213.0" layoutY="148.0"
               styleClass="time-input"/>

    <Label fx:id="comebackFromLunch"
           layoutX="75.0" layoutY="228.0"
           text="Прийти с обеда:"
           styleClass="input-label"/>

    <TextField fx:id="timeComebackFromLunch"
               layoutX="213.0" layoutY="224.0"
               styleClass="time-input"/>

    <Label fx:id="quitMyJob"
           layoutX="75.0" layoutY="304.0"
           text="Уйти с работы:"
           styleClass="input-label"/>

    <TextField fx:id="timeQuitMyJob"
               layoutX="213.0" layoutY="300.0"
               styleClass="time-input"/>

    <!-- Кнопка расчета -->
    <Button fx:id="calculaterLunchEnd"
            layoutX="396.0" layoutY="224.0"
            text="Рассчитать"
            onAction="#calculaterLunchEnd"
            styleClass="jfx-button calculate-button"/>

</Pane>